  <script src="https://cdn.jsdelivr.net/npm/trading-vue-js"></script>
  <script src="https://cdn.jsdelivr.net/npm/tvjs-overlays@0.2.1/dist/tvjs-overlays.min.js" integrity="sha256-klz8agLR/udqcYl1l3F0LQNMgxp8+Q0z6fnOxAhqHwQ=" crossorigin="anonymous"></script>

  <script src="/javascripts/WebSocket.js"></script>
  <script src="/javascripts/parseParams.js"></script>
  <script src="/javascripts/pswd.js"></script>
  <script src="/javascripts/index/render.js"></script>

{% endblock %}

{% block body %}
  <section class="content">
    <div class="container-fluid">
      <div class="row">

        <div class="col-sm-3 col-lg-2">

          {# Crypto Pairs #}
          <div class="block-section">
            <div class="header">
              Crypto Pairs
            </div>
            <div class="block">
              <div id="markets">
                <div v-if="markets">
                  <div v-for="pair in markets">
                    <div class="pair-container">
                      <b>
                        <i v-bind:class="pair.info.base_currency | cryptofont"></i>
                        <span>${pair.symbol}</span>
                      </b>
                      <span class="right">
                      <span class="span-taker">${pair.taker}</span>
                      <span class="span-maker">${pair.maker}</span>
                    </span>
                    </div>
                  </div>
                </div>
                <div v-else class="no-content">
                  <img src="/images/bitcoin.png" alt="">
                  <h5>No currency pairs</h5>
                  <small>There is no information about currency pairs on this exchange</small>
                </div>
              </div>
            </div>
          </div>

          {# Firmware #}
          <div class="block-section">
            <div class="header">
              Firmware
            </div>
            <div class="block" id="firmware">
              <div v-if="items">

              </div>
              <div v-else class="no-content">
                <img src="/images/pcb.png" alt="">
                <h5>No activity.</h5>
                <small>No signals from the virtual machine.</small>
                <a href="/studio">Create</a>
              </div>
            </div>
          </div>

        </div>

        <div class="col-sm-12 col-md-4 col-lg-6">

          {# Chart #}
          <div class="block-section">
            <div class="header">

              <select id="toolbar-select-chart" @change="toggle($event)">
                <option v-for="exchange in exchanges" v-bind:value="exchange.value">${exchange.pair} ${exchange.name}</option>
              </select>

              <span v-on:click="toggle" id="toolbar-sound-on-change-price" v-bind:style="{color: turn ? 'white' : 'gray'}">
                <i class="fas fa-volume toolbar-icon-toggle"></i>
              </span>

              <div class="right">
                <span id="instrumentData">
                  <span class="price-info">
                    Open interest:
                    <span class="open-interest">${openInterest}$</span>
                  </span>
                   <span class="price-info">
                    Volume:
                    <span class="default-price">${volume24h}</span>
                  </span>
                  <span class="price-info">
                    High:
                    <span class="high-price">${maxPrice24h}$</span>
                  </span>
                  <span class="price-info">
                    Low:
                    <span class="low-price">${minPrice24h}$</span>
                  </span>
              </span>
              </div>
            </div>
            <div class="block" id="chart">

              <trading-vue :data="this.chart"
                           title-txt="BTCUSD"
                           :toolbar="this.toolbar"
                           :width="this.width"
                           :height="this.height"
                           :overlays="this.overlays"
                           :chart-config="this.config"
                           :color-back="this.colors.colorBack"
                           :color-grid="this.colors.colorGrid"
                           :color-text="this.colors.colorText">
              </trading-vue>

            </div>
          </div>

        </div>

        <div class="col-sm-12 col-md-4 col-lg-2">

          {# Capital #}
          <div class="block-section">
            <div class="header">
              Capital
            </div>
            <div class="block" id="capital">

              <div v-if="capital">
                <div v-for="exchange in capital">
                  <div class="exchange-name">${exchange.exchange | upper}</div>
                  <div v-for="(value, symbol) in exchange['total']" class="value-box"><span class="exchange-capital-symbol">${symbol}</span> <span v-bind:id="exchange.exchange | id">${value}</span></div>
                </div>
              </div>

              <div v-else class="no-content">
                <img src="/images/capital.png" alt="">
                <h5>No data.</h5>
                <small>We don't have any data on your capital.</small>
                <a href="/deposite">Deposite</a>
              </div>
            </div>
          </div>

          {# Deals #}
          <div class="block-section">
            <div class="header">
              Terminal Deals
            </div>
            <div class="block">
              <div v-if="false"></div>
              <div v-else class="no-content">
                <img src="/images/money.png" alt="">
                <h5>Empty</h5>
                <small>You don't have any open orders at this time.</small>
              </div>
            </div>
          </div>

          {# News #}
          <div class="block-section">
            <div class="header">
              News
            </div>
            <div class="block" id="feed">
              <div v-if="items">
                <div v-if="items" v-for="post in items" class="post-body">
                  <h5>${post.title}</h5>
                  <small class="feed-description">${post.description}</small>
                </div>
              </div>
              <div v-else class="no-content">
                <img src="/images/text-lines.png" alt="">
                <h5>No news yet.</h5>
                <small>No news in the world of cryptology yet.</small>
              </div>
            </div>
          </div>

        </div>

        <div class="col-sm-12 col-md-4 col-lg-2">

          {# OrderBook #}
          <div class="block-section">
            <div class="header">
              Exchange OrderBook
            </div>
            <div class="block" id="ordersBook">
              <div v-if="reversedAsks[0][0] != 0">

                <div v-for="item in reversedAsks" class="orderAsk" v-bind:key="item[0]">
                  <span class="left" v-bind:style="{width: item[1]/1000 > 70 ? 70 : item[1]/1000 + '%', 'transition': '0.3s'}">
                    ${item[0]}
                  </span>
                  <span class="right">
                    ${item[1] | format}
                  </span>
                </div>

                <h5 class="centerOrderBookPrice">${tweenedPrice | format} USD</h5>

                <div v-for="item in bids" class="orderBids" v-bind:key="item[0]">
                 <span class="left" v-bind:style="{width: item[1]/1000 > 70 ? 70 : item[1]/1000 + '%', 'transition': '0.3s'}">
                  ${item[0]}
                </span>
                  <span class="right">
                  ${item[1] | format}
                </span>
                </div>

              </div>

              <div v-else class="no-content">
                <img src="/images/warning.png" alt="">
                <h5>No order data.</h5>
                <small>No trading data for the exchange you selected.</small>
              </div>

            </div>
          </div>

        </div>

      </div>

    </div>
  </section>

{% endblock %}
